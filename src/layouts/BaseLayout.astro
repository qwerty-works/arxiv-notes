---
import '../styles/global.css';

const {
  title = 'arxiv-notes',
  description = '5-minute paper briefs for humans using AI better',
  canonical,
} = Astro.props;

// NOTE: Astro.site is configured as the full GH Pages base URL
// (e.g. https://qwerty-works.github.io/arxiv-notes). If we pass a canonical
// starting with "/", new URL(...) will drop the /arxiv-notes base path.
// So we normalize by stripping leading slashes.
const canonicalUrl = canonical
  ? new URL(canonical.replace(/^\/+/, ''), Astro.site ?? 'https://example.com').toString()
  : undefined;

const BASE = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalUrl ? <link rel="canonical" href={canonicalUrl} /> : null}

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {canonicalUrl ? <meta property="og:url" content={canonicalUrl} /> : null}

    <!-- CSP via meta tag (GitHub Pages can't set HTTP headers). Keep tight. -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src 'self' 'unsafe-inline'; connect-src 'none'" />

    <meta name="theme-color" content="#0b0d10" />
  </head>
  <body>
    <div class="container">
      <header class="masthead">
        <div class="brand">
          <a href={BASE} style="text-decoration:none">
            <div class="brand__name">arxiv-notes</div>
          </a>
          <div class="brand__tag">5-minute paper briefs for humans using AI better</div>
        </div>
        <nav class="nav" aria-label="Site">
          <a href={BASE}>Front page</a>
          <a href={`${BASE}tags/`}>Tags</a>
          <a href={`${BASE}about/`}>About</a>
        </nav>
        <div class="schedule">New brief every weekday at <strong>7:30am ET</strong>.</div>
      </header>

      <main>
        <slot />
      </main>
    </div>

    <script>
      // Copy-to-clipboard for "Copy/paste prompts" blocks
      (function () {
        function setBtn(btn, text) {
          btn.textContent = text;
          if (text === 'Copied') {
            btn.dataset._copied = '1';
            setTimeout(() => {
              if (btn.dataset._copied === '1') btn.textContent = 'Copy';
              delete btn.dataset._copied;
            }, 900);
          }
        }

        document.addEventListener('click', async (e) => {
          const btn = e.target && e.target.closest ? e.target.closest('button.copyBtn') : null;
          if (!btn) return;

          const text = btn.getAttribute('data-copy') || '';
          if (!text) return;

          try {
            await navigator.clipboard.writeText(text);
            setBtn(btn, 'Copied');
          } catch (err) {
            // Fallback for older browsers
            try {
              const ta = document.createElement('textarea');
              ta.value = text;
              ta.setAttribute('readonly', '');
              ta.style.position = 'fixed';
              ta.style.top = '-1000px';
              document.body.appendChild(ta);
              ta.select();
              document.execCommand('copy');
              document.body.removeChild(ta);
              setBtn(btn, 'Copied');
            } catch (err2) {
              setBtn(btn, 'Copy failed');
              setTimeout(() => setBtn(btn, 'Copy'), 1200);
            }
          }
        });
      })();
    </script>
  </body>
</html>
