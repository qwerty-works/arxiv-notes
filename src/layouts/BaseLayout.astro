---
import '../styles/global.css';

const {
  title = 'arxiv-notes',
  description = '5-minute paper briefs for humans using AI better',
  canonical,
} = Astro.props;

// NOTE: Astro.site is configured as the full GH Pages base URL
// (e.g. https://qwerty-works.github.io/arxiv-notes). If we pass a canonical
// starting with "/", new URL(...) will drop the /arxiv-notes base path.
// So we normalize by stripping leading slashes.
const canonicalUrl = canonical
  ? new URL(canonical.replace(/^\/+/, ''), Astro.site ?? 'https://example.com').toString()
  : undefined;

const BASE = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalUrl ? <link rel="canonical" href={canonicalUrl} /> : null}

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {canonicalUrl ? <meta property="og:url" content={canonicalUrl} /> : null}

    <!-- CSP via meta tag (GitHub Pages can't set HTTP headers). Keep tight. -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src 'self' 'unsafe-inline'; connect-src 'self' https://api.openai.com" />

    <meta name="theme-color" content="#0b0d10" />
    <link rel="stylesheet" href={`${BASE}chat/paper-chat.css`} />
  </head>
  <body>
    <div class="container">
      <header class="masthead">
        <div class="brand">
          <a href={BASE} style="text-decoration:none">
            <div class="brand__name">arxiv-notes</div>
          </a>
          <div class="brand__tag">5-minute paper briefs for humans using AI better</div>
        </div>
        <nav class="nav" aria-label="Site">
          <a href={BASE}>Front page</a>
          <a href={`${BASE}tags/`}>Tags</a>
          <a href={`${BASE}about/`}>About</a>
        </nav>
        <div class="schedule">Briefs twice a twice a day every day.</div>
      </header>

      <main>
        <slot />
      </main>

      <!-- Chat with the paper (BYO key) -->
      <div id="paperChat" class="paperChat" data-state="closed">
        <section id="paperChatDrawer" class="paperChat__drawer" aria-label="Paper chat" role="dialog" aria-modal="false">
          <header class="paperChat__header">
            <div class="paperChat__title">Chat with this paper</div>
            <button id="paperChatClose" class="paperChat__close" type="button" aria-label="Close">âœ•</button>
          </header>

          <div id="paperChatGate" class="paperChat__gate" hidden>
            <div class="paperChat__gateTitle">Enable chat</div>
            <div class="paperChat__gateBody">
              <p>Bring your own OpenAI API key. It stays in your browser.</p>
              <label class="paperChat__label">API key</label>
              <input id="paperChatApiKey" class="paperChat__input" type="password" inputmode="text" autocomplete="off" placeholder="sk-..." />

              <label class="paperChat__label" style="margin-top:10px">Passphrase (encrypts key locally)</label>
              <input id="paperChatPass" class="paperChat__input" type="password" autocomplete="off" placeholder="Choose a passphrase" />

              <div class="paperChat__row" style="margin-top:10px">
                <button id="paperChatSaveKey" class="paperChat__btn paperChat__btnPrimary" type="button">Save & enable</button>
                <button id="paperChatUseOnce" class="paperChat__btn" type="button">Use once</button>
              </div>
              <div class="paperChat__muted" style="margin-top:10px">
                Note: if your device/browser is compromised, stored keys can be extracted.
              </div>
            </div>
          </div>

          <div id="paperChatUnlock" class="paperChat__gate" hidden>
            <div class="paperChat__gateTitle">Unlock chat</div>
            <div class="paperChat__gateBody">
              <p>Enter your passphrase to decrypt your saved API key.</p>
              <label class="paperChat__label">Passphrase</label>
              <input id="paperChatPassUnlock" class="paperChat__input" type="password" autocomplete="off" placeholder="Passphrase" />
              <div class="paperChat__row" style="margin-top:10px">
                <button id="paperChatUnlockBtn" class="paperChat__btn paperChat__btnPrimary" type="button">Unlock</button>
                <button id="paperChatForget" class="paperChat__btn" type="button">Forget key</button>
              </div>
            </div>
          </div>

          <div id="paperChatMain" class="paperChat__main" hidden>
            <div id="paperChatMsgs" class="paperChat__msgs" aria-label="Messages"></div>
            <div class="paperChat__composer">
              <textarea id="paperChatQ" class="paperChat__textarea" rows="2" placeholder="Ask a questionâ€¦"></textarea>
              <button id="paperChatSend" class="paperChat__send" type="button">Send</button>
            </div>
            <details class="paperChat__receipts" id="paperChatReceipts" hidden>
              <summary>Receipts</summary>
              <div id="paperChatReceiptsBody" class="paperChat__receiptsBody"></div>
            </details>

            <div id="paperChatModal" class="paperChat__modal" hidden>
              <div class="paperChat__modalBackdrop" data-close="1"></div>
              <div class="paperChat__modalPanel" role="dialog" aria-modal="true" aria-label="Receipt context">
                <div class="paperChat__modalHeader">
                  <div id="paperChatModalTitle" class="paperChat__modalTitle">Receipt</div>
                  <button id="paperChatModalClose" class="paperChat__modalClose" type="button" aria-label="Close">âœ•</button>
                </div>
                <pre id="paperChatModalBody" class="paperChat__modalBody"></pre>
              </div>
            </div>
          </div>
        </section>

        <button id="paperChatFab" class="paperChat__fab" type="button" aria-label="Chat with this paper">
          <span class="paperChat__fabDot" aria-hidden="true"></span>
          <span class="paperChat__fabIcon" aria-hidden="true">ðŸ’¬</span>
        </button>
      </div>

      <script type="module" src={`${BASE}chat/paper-chat.js`}></script>

      <footer class="siteFooter" role="contentinfo">
        <div class="siteFooter__inner">
          <div class="siteFooter__brand">arxiv-notes</div>
          <div class="siteFooter__meta">
            Briefs twice a twice a day every day.
            <span aria-hidden="true"> Â· </span>
            <a href={`${BASE}rss.xml`} style="text-decoration:none">RSS</a>
          </div>
        </div>
      </footer>
    </div>

    <script>
      // Copy-to-clipboard for "Copy/paste prompts" blocks
      (function () {
        function setBtn(btn, text) {
          btn.textContent = text;
          if (text === 'Copied') {
            btn.dataset._copied = '1';
            setTimeout(() => {
              if (btn.dataset._copied === '1') btn.textContent = 'Copy';
              delete btn.dataset._copied;
            }, 900);
          }
        }

        document.addEventListener('click', async (e) => {
          const btn = e.target && e.target.closest ? e.target.closest('button.copyBtn') : null;
          if (!btn) return;

          const text = btn.getAttribute('data-copy') || '';
          if (!text) return;

          try {
            await navigator.clipboard.writeText(text);
            setBtn(btn, 'Copied');
          } catch (err) {
            // Fallback for older browsers
            try {
              const ta = document.createElement('textarea');
              ta.value = text;
              ta.setAttribute('readonly', '');
              ta.style.position = 'fixed';
              ta.style.top = '-1000px';
              document.body.appendChild(ta);
              ta.select();
              document.execCommand('copy');
              document.body.removeChild(ta);
              setBtn(btn, 'Copied');
            } catch (err2) {
              setBtn(btn, 'Copy failed');
              setTimeout(() => setBtn(btn, 'Copy'), 1200);
            }
          }
        });
      })();
    </script>
  </body>
</html>
